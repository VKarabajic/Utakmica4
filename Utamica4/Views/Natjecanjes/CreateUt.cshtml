@model Utamica4.Models.Natjecanje

@{
    ViewBag.Title = "CreateUt";
}

@{Html.RenderPartial("../Shared/Navigation");}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div style="margin-left:20%;">
    <h2>Dodaj novu utakmicu</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.NazivUtakmice, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NazivUtakmice, new { htmlAttributes = new { @class = "form-control", placeholder = "Rezultat utakmice" } })
            @Html.ValidationMessageFor(model => model.NazivUtakmice, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ekipa1, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ekipa1, new { htmlAttributes = new { @class = "form-control", placeholder = "Naziv Ekipe 1" } })
            @Html.ValidationMessageFor(model => model.Ekipa1, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ekipa2, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ekipa2, new { htmlAttributes = new { @class = "form-control", placeholder = "Naziv Ekipe 2" } })
            @Html.ValidationMessageFor(model => model.Ekipa2, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Raspored, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Raspored, new { htmlAttributes = new { @class = "form-control", placeholder = "dd.mm.yy ss:mm:hh" } })
            @Html.ValidationMessageFor(model => model.Raspored, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

    <div>
        @Html.ActionLink("Vraćanje na popis", "Index")
    </div>

</div>
}

